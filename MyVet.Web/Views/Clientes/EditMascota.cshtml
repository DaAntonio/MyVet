@model MyVet.Web.Models.MascotaViewModel

@{
    ViewData["Title"] = "EditMascota";

}
<h2>Editar</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditMascota" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ClienteId" />
            <input type="hidden" asp-for="UrlImagen" />
            <partial name="_Mascota" />
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a asp-action="Details" asp-route-id="@Model.ClienteId" class="btn btn-success">Regresar</a>
            </div>
        </form>
    </div>
    <div class="col-md-4">
        @if (!string.IsNullOrEmpty(Model.UrlImagen))
        {
            <img src="@Url.Content(Model.UrlImagen)" alt="=Image" style="width:400px;height:400px;max-width:100%;height:auto;" />
        }
    </div>
</div>


