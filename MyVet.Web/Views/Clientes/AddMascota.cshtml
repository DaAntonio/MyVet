@model MyVet.Web.Models.MascotaViewModel
@{
    ViewData["Title"] = "AddMascota";
}

<h2>Registro de mascota</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddMascota" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ClienteId" />

            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ImagenFile" class="control-label"></label>
                <input asp-for="ImagenFile" class="form-control" type="file" />
                <span asp-validation-for="ImagenFile" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="TipoMascotaId" class="control-label"></label>
                <select asp-for="TipoMascotaId" asp-items="Model.TipoMascotas" class="form-control"></select>
                <span asp-validation-for="TipoMascotaId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Rasa" class="control-label"></label>
                <input asp-for="Rasa" class="form-control" />
                <span asp-validation-for="Rasa" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FechaNacimiento" class="control-label"></label>
                <input asp-for="FechaNacimiento" class="form-control" />
                <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Comentarios" class="control-label"></label>
                <textarea asp-for="Comentarios" class="form-control"></textarea>
                <span asp-validation-for="Comentarios" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Details" asp-route-id="@Model.ClienteId" class="btn btn-success">Regresar</a>
            </div>
        </form>
    </div>
</div>


