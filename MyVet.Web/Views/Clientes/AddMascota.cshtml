@model MyVet.Web.Models.MascotaViewModel
@{
    ViewData["Title"] = "AddMascota";
}

<h2>Registro de mascota</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddMascota" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ClienteId" />
            <partial name="_Mascota" />
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a asp-action="Details" asp-route-id="@Model.ClienteId" class="btn btn-success">Regresar</a>
            </div>
        </form>
    </div>
</div>


