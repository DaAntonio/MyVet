@model MyVet.Web.Models.HistoriaViewModel
@{
    ViewData["Title"] = "EditarHistoria";
}

<h2>Editar Historia</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditarHistoria">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MascotaId" />
            <input type="hidden" asp-for="Id" />
            <partial name="_Historia" />


            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a asp-action="DetailsMascota" asp-route-id="@Model.MascotaId" class="btn btn-success">Regresar</a>
            </div>
        </form>
    </div>
</div>
